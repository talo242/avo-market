generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Avocado {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  name        String    @db.VarChar(255)
  price       Float
  sku         String?   @unique
  image       String?
  description String?
  owner       User      @relation(fields: [ownerId], references: [id])
  ownerId     String
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  email     String    @unique
  name      String?
  avocados  Avocado[]
}
